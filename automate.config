# Automation Configuration for Telos Idea Matrix
# This file defines when and how automatic builds are triggered

[build]
# Development build settings
dev_command = "./make.sh -d -q"
# Release build settings
release_command = "./make.sh -q"
# Test command to run after builds
test_command = "./make.sh -t -q"

[watch]
# File patterns to watch for changes
watch_patterns = ["*.go", "*.mod", "*.sum", "*.md"]
# Directories to watch
watch_directories = ["cmd/", "internal/", "go.mod"]
# Delay in seconds between checks
watch_delay = 2

[git_hooks]
# Enable post-commit hook to run dev build
post_commit = true
# Enable post-merge hook to run release build  
post_merge = true
# Enable post-checkout hook to run dev build
post_checkout = true

[release]
# Build on tag creation
build_on_tag = true
# Build on release branch
build_on_release_branch = ["main", "master", "release"]
# Auto-deploy on successful release build
auto_deploy = false